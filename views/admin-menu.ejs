<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/stylesheet.css">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>

<div class="row1 center-block">
    
          
            <p class="center code pp "><%=code%></p>
          </div>
          <div class="row">
            
                <div class="col s4"><b>Name</b></div>
                <div class="col s4"> Price </span></div>
                <div class="col s4">Action</div>
                </div>
              </div>
                <%if (products && products.length){ %>
    
                      
                          <% for (var i=0; i < products.length; i++){%>
                              
                           
                                <div class="row">
                                
                                    <div class="col s4 "><span class="name"><%=products[i].name %></span></div>
                                    <div class="col s4"> <%=products[i].price %> </span></div>
                                    <div class="col s4"><button class="btn-small waves effect btn-order remove">REMOVE</button></div>
                                    </div>
                                  </div>
                              <%}%>
                     
                      <%}%>

                       <div class="wrapper1 center-block">
                        <form class="form" action="/admin/addproduct" method="post">
                          <div class="row">
                            <p class="center top-text">Add product</p></div> 
                        <div class="row">
                          <div class="input-field col s12">
                            <input id="name" type="text" name="name">
                            <label for="name">Product Name</label>
                          </div>
                          <div class="input-field col s12">
                            <input id="price" type="text" name="price">
                            <label for="price">Product Price</label>
                          </div>
                        </div>
        </div>
     
        </div>
        <script src="/jquery/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="//voguepay.com/js/voguepay.js"></script>
        <script>
          $(".btn-order").click(function(){
            var item=$(this).siblings("div span.name").text();
         alert(item)
         
          })
        </script>
    </body>
    </html>